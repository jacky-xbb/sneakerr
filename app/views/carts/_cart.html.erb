<%= turbo_frame_tag dom_id(@cart) do %>
  <details class="relative">
    <summary><%= number_to_currency(@cart.total_price) %></summary>
    <div class="absolute bg-white right-0 w-96 p-2 rounded-b-lg shadow-lg">
      <div class="flex flex-col divide-y divide-gray-100">
        <%= render @cart.line_items %>
      </div>
      <div class="flex px-2 justify-between font-bold border-t-2 border-gray-600">
        <div>Subtotal: </div>
        <div><%= number_to_currency(@cart.total_price) %></div>
      </div>
    </div>
  </details>
<% end %>
